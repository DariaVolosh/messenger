<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_photo"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:layout_marginStart="@dimen/_40dp"
        android:layout_marginEnd="@dimen/_40dp"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_marginBottom="@dimen/_10dp"/>

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sp"
        android:fontFamily="@font/kufam_semi_bold"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/_10dp"
        tools:text="Name surname"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/kufam_regular"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/_10dp"
        tools:text="Login"/>

    <TextView
        android:id="@+id/friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/kufam_regular"
        android:textColor="@color/turquoise"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/_10dp"
        tools:text="25 friends"/>

    <Button
        android:id="@+id/add_to_friends_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/turquoise"
        app:icon="@drawable/ic_send"
        android:text="@string/add_to_friends_button_text"
        android:textAllCaps="false"
        app:iconGravity="end"
        android:layout_marginBottom="@dimen/_40dp"/>

    <TextView
        android:id="@+id/request_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/request_sent"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/kufam_regular"
        android:textColor="@color/black"/>
</LinearLayout>